[Unit]
Description=Symbol Rest Gateway Light
Requires=network.target
After=network.target

[Service]
Type=idle
ExecStart=/usr/local/node-users/symbol/node/bin/node src/index.js ./resources/rest-light.json
Restart=on-failure
RestartSec=2
User=symbol
Group=symbol
WorkingDirectory=/opt/symbol-node/rest
StandardOutput=journal
StandardError=journal
LimitNOFILE=65536
UMask=077

[Install]
WantedBy=multi-user.target
