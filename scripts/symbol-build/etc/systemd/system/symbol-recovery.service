[Unit]
Description=Symbol Recovery

[Service]
Type=oneshot
ExecStart=/opt/symbol-node/bin/catapult.recovery .
KillSignal=SIGINT
TimeoutStopSec=60
User=symbol
Group=symbol
WorkingDirectory=/opt/symbol-node
Environment="LD_LIBRARY_PATH=/opt/symbol-node/deps"
Environment="OPENSSL_MODULES=/opt/symbol-node/deps/ossl-modules"
StandardOutput=journal
StandardError=journal
LimitNOFILE=65536
UMask=077

[Install]
WantedBy=multi-user.target
